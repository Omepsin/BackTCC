<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Funcionários</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <hr>
        <h2>Funcionários</h2>
        <a href="/func/cadastrar" class="btn">Criar novo usuário</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Salário</th>
                    <th>Celular</th>
                    <th>Rua</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th>Número</th>
                    <th>CEP</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% funcionarios.forEach(funcionarios => { %>
                    <tr>
                        <th><%= funcionarios.nome %></th>
                        <th><%= funcionarios.cpf %></th>
                        <th><%= funcionarios.salario %></th>
                        <th><%= funcionarios.cel %></th>
                        <th><%= funcionarios.rua %></th>
                        <th><%= funcionarios.cidade %></th>
                        <th><%= funcionarios.uf %></th>
                        <th><%= funcionarios.num %></th>
                        <th><%= funcionarios.cep %></th>
                        <th><%= funcionarios.email %></th>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>