<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Produtos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <hr>
        <h2>Produtos</h2>
        <a href="/cadastrar/produto" class="btn">Criar novo produto</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Imagem</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% produtos.forEach(produtos => { %>
                    <tr>
                        <th>
                            <%= produtos.id %>
                        </th>
                        <th>
                            <%= produtos.nome %>
                        </th>
                        <th>
                            <%= produtos.preco %>
                        </th>
                        <th>
                            <%= produtos.imagem %>
                        </th>

                        <th>
                            <a href="/edit/produtos/<%= produtos.id %>" class="btn btn-warning">Editar</a>

                            <form method="POST" action="/deletar/produto" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                                <input type="hidden" name="id" value="<%= produtos.id %>">
                                <button class="btn btn-danger">Excluir</button>
                            </form>
                        </th>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        function confirmarDelecao(event, form) {
            event.preventDefault()
            let decision = confirm("você quer deletar isso?")
            if (decision) {
                form.submit()
            }
        }
    </script>
</body>

</html>